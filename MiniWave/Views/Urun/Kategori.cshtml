@using MiniWave.Model

@model List<KategoridekiUrunler_Result>

@{
    ViewBag.Title = "Urunler";
}

<div class="col-md-12">
    <div class="block">
        <div class="block-heading">
            <h2>
                @ViewData["mesaj"]
            </h2>

        </div>
        <div class="block-content-outer" style="display: block;">


            <div class="block-content-inner">
                <table border="1" class="table table-striped table-hover table-condensed">

                    <thead>
                        <tr>

                            <th>Ürün Fotoğrafı</th>
                            <th>Ürün Adı</th>
                            <th>Ürün Türü</th>
                            <th>Ürün Açıklaması</th>
                            <th>Ürün Fiyatı</th>
                            <th>Ürün Mağazası</th>



                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var urun in Model)
                        {
                            <tr>

                                <td>

                                    <img src="@urun.UrunResimPath" alt="" border="3" height=100 width=100><img />

                                </td>
                                <td>@urun.UrunAdi </td>
                                <td>@urun.Kategori </td>
                                <td>@urun.UrunAciklama </td>
                                <td>@urun.UrunFiyat</td>
                                <td>@urun.MagazaAdi </td>


                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>